===== ./views/unmask.js =====
changeType.ready(function(){$('.unmask').on('click',function(){if($(this).prev('input').attr('type')=='password')changeType($(this).prev('input'),'text');elsechangeType($(this).prev('input'),'password');returnfalse;});functionchangeType(x,type){if(x.type==type)returnx;//Thatwaseasy.try{returnx.type=type;//StupidIEsecuritywillnotallowthis}catch(e){varhtml=$("<div>").append(x.clone()).html();varregex=/type=(\")?([^\"\s]+)(\")?/;vartmp=$(html.match(regex)==null?html.replace(">",'type="'+type+'">'):html.replace(regex,'type="'+type+'"'));tmp.data('type',x.data('type'));varevents=x.data('events');varcb=function(events){returnfunction(){for(variinevents){vary=events[i];for(varjiny)tmp.bind(i,y[j].handler);}}}(events);x.replaceWith(tmp);setTimeout(cb,10);returntmp;}}});
